package com.SpringMVC.api.web;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RestController;

import com.SpringMVC.model.dto.CommentDTO;
import com.SpringMVC.service.ICommentService;

@RestController(value = "ReviewApiOfWeb")
public class CommentAPI {
	
	@Autowired
	private ICommentService reviewService;
	
	@GetMapping(value = "/api/review")
	public CommentDTO ReadReview(){
		return null;
	}
	
	@PostMapping(value = "/api/review")
	public CommentDTO InsertReview(@RequestBody CommentDTO reviewDto){
		return reviewService.InsertComment(reviewDto);
	}
	
	@PutMapping(value = "/api/review")
	public CommentDTO UpdateReview(@RequestBody CommentDTO userDto){
		return null;	
	}
	
	@DeleteMapping(value = "/api/review")
	public void DeleteReview(@RequestBody long id){
		reviewService.DeleteComment(id);
	}
}
